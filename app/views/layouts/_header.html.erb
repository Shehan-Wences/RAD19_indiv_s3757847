<header class="navbar">
  <div class="container">
    <%= link_to "Project app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">


        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-crosshairs"></i> Category <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Show All", courses_path %></li>
              <% (Category.all).each do |cat| %>
              <li><%= link_to cat.name, courses_path(:name=>cat.name)  %></li>
              <% end %>
            </ul>
        </li>
       <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-location-arrow"></i> Location <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Show All", courses_path %></li>
              <% (Location.all).each do |loc| %>
              <li><%= link_to loc.locationname, courses_path(:locationname=>loc.locationname)  %></li>
              <% end %>
            </ul>
        </li>




        <% if logged_in? %>
          <li><i class="fa fa-file"></i><%= link_to "New Course", new_course_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user" style="color:white;"></i> <%= @current_user.name %> <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", current_user %></li>
              <li><%= link_to "Edit Profile", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
         <li><i class="fa fa-address-card"></i><%= link_to "Log in", login_path %></li>
        <% end %>




      </ul>
    </nav>
  </div>
</header>


