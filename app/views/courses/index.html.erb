

<h1>All Courses</h1>



<div class="container">
    <% @courses.each do |course| %>
      <div class="row course-block" style="margin:18px 18px 0px 0px;padding:18px 18px 0px 0px;border-top: 1px solid lightgrey;">
        <div class="col-md-2"></div>
        <div class="col-md-6" style="background:lightgrey;padding:10px 10px 10px 20px;">
        <h4><%= link_to course.name, course %></h4>
        <p>Prerequisite : <%= course.prerequisite %></p>
        <p>Category : <%= course.category %></p>
        <p>Location : <%= course.location %></p>
        <td></td>
        <td><%#= link_to 'Edit', edit_course_path(course) %></td>
        <td><%#= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </div>
    <% end %>
</div>




